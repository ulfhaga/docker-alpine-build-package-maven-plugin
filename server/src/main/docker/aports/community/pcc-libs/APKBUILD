# Maintainer
pkgname=pcc-libs
pkgver=20200826
pkgrel=0
pkgdesc="The portable C compiler support libraries."
url="http://pcc.ludd.ltu.se/"
arch="x86 x86_64"
license="BSD"
subpackages="$pkgname-dev"
source="ftp://pcc.ludd.ltu.se/pub/pcc-libs/pcc-libs-$pkgver.tgz
	musl-fixes.patch"

prepare() {
	default_prepare
	update_config_sub
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

