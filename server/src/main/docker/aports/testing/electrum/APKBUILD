# Maintainer: Micha≈Ç Adamski <michal@ert.pl>
pkgname=electrum
pkgver=3.3.8
pkgrel=0
pkgdesc="Lightweight Bitcoin Wallet"
url="https://electrum.org/"
arch="noarch !armv7 !x86" # py3-aiohttp-socks
license="MIT"
depends="
	python3
	py3-aiohttp
	py3-aiohttp-socks
	py3-aiorpcx
	py3-certifi
	py3-chardet
	py3-dnspython
	py3-ecdsa
	py3-idna
	py3-jsonrpclib
	py3-multidict
	py3-protobuf
	py3-pyaes
	py3-qrcode
	py3-six
	py3-yarl
	"
makedepends="py3-setuptools"
source="https://download.electrum.org/$pkgver/Electrum-$pkgver.tar.gz"
builddir="$srcdir/Electrum-$pkgver"

build() {
	python3 setup.py build
}

check() {
	python3 setup.py check
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
	rm -r "$pkgdir"/home
}
sha512sums="5f756da4d2df59c69997925c69f651011def07bfbdbc582f492ecc19386eee7d79b9951732a792e6041da902d776052d6590cbd2d7004bc93c8406bcf9093fe6  Electrum-3.3.8.tar.gz"
