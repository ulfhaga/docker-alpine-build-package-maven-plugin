pkgname=s6-overlay
pkgver=2.0.0.1
pkgrel=1
pkgdesc="s6 overlay for containers"
url="https://github.com/just-containers/$pkgname/"
arch="noarch"
license="ISC"
depends="s6
	execline
	justc-envdir
	s6-dns
	s6-linux-utils
	s6-networking
	s6-portable-utils
	s6-rc
	"
options="!check" # no test suite/unit tests
source="https://github.com/just-containers/s6-overlay/releases/download/v$pkgver/s6-overlay-nobin.tar.gz"

package() {
	mkdir -p "$pkgdir"

	cp -a "$srcdir"/* "$pkgdir"/
	rm "$pkgdir"/s6-overlay-nobin.tar.gz
}

